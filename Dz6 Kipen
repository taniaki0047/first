//найти моду в последовательности чисел; мод может быть несоклько
#include<stdio.h>
#define N 40
int main()
{
	int n, a[N];
	printf("Vvedite kol-vo elementov ");
	scanf("%d", &n);
	for (int i=0; i<n; i++)
	{
		printf("a[%d]= ",i);
		scanf("%d", &a[i]);
	}
    int povtori[N], znachenie[N];
    for (int m = 0; m < n; m++)
	{
		int t = 0;
        for (int w = m; w < n; w++)
        {
        	if (a[m] == a[w])
            {
            	t = t + 1;
            }
         }

         znachenie[m] = a[m];
         povtori[m] = t;
     }
     int max=0;
     for (int g = 0; g < n; g++)
     {
     	if (povtori[g] > max)
        {
        	max = povtori[g];
        }
     }
     for (int t = 0; t < n; t++)
     {
     	if (povtori[t] == max)
        {
        printf("Moda massiva: %d\n", znachenie[t]);
        }
     }
}

//найти простые числа в последовательности и вывести их
#include <stdio.h>
#include <math.h>
#define N 40
int isPrime(int k)
{
	if (k%2==0) return (k==2);
	for (int i=3; i<sqrt(k+1); i+=2)
	{ 
		if (k%i==0) return 0;
	}
	return 1;
}
int main()
{
	int a[N], n;
	printf("Vvedite kol-vo elem ");
	scanf("%d", &n);
	for (int i=0; i<n; i++)
	{
		printf("a[%d]= ",i);
		scanf("%d", &a[i]);
	}
	int b[20];
	int k=1;
	for(int i=1;i<n;i+=1)
	{
		if (isPrime(a[i])==1)
		{b[i]=a[i]; 
		k+=1;}
	}
	printf("k  %d", k);
	for(int j=0;j<k;k++)
	{
		printf("%d", b[j]);
	}
}
